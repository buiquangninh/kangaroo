<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="AfterProductDescriptionPromoBannerAndCategoriesTest" extends="TopPromoBannerOnProductPageAndProductSKUTest">
        <annotations>
            <features value="Rule Creation"/>
            <stories value="Create a Rule via the Admin"/>
            <title value="Check After Product Description Banner And Categories"/>
            <description value="Check After Product Description Banner And Categories"/>
            <severity value="CRITICAL"/>
            <testCaseId value="AA-MFTF-26"/>
            <group value="Amasty"/>
            <group value="Promo"/>
            <group value="PromoBannersLite"/>
        </annotations>

        <before>
            <createData entity="_defaultCategory" after="createCategory" stepKey="createSecondCategory"/>
            <createData entity="SimpleProductByWatchClamber" stepKey="createSecondProduct">
                <requiredEntity createDataKey="createSecondCategory"/>
            </createData>
            <actionGroup ref="AdminEditRuleShowBannerForCategoriesActionGroup" stepKey="editCartRuleBannerFirst">
                <argument name="cartRuleName" value="defaultPromoCartRule.name"/>
                <argument name="category" value="$$createCategory.name$$"/>
            </actionGroup>
            <actionGroup ref="AdminEditRuleAddAfterBannerActionGroup" stepKey="editCartRuleBannerSecond">
                <argument name="cartRuleName" value="defaultPromoCartRule.name"/>
            </actionGroup>
        </before>
        <after>
            <deleteData createDataKey="createSecondCategory" after="deleteCategory" stepKey="deleteSecondCategory"/>
        </after>

        <remove keyForRemoval="assertTopOnProductSecond"/>
        <actionGroup ref="StorefrontAssertNoTopBannerOnProductPageActionGroup" stepKey="assertTopOnProductFirst">
            <argument name="product" value="$$createFirstProduct$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertAfterBannerOnProductPageActionGroup" stepKey="assertAfterOnProductFirst">
            <argument name="product" value="$$createFirstProduct$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertNoLabelBannerOnProductPageActionGroup" stepKey="assertLabelOnProductFirst">
            <argument name="product" value="$$createThirdProduct$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontAssertAfterBannerOnProductPageActionGroup" stepKey="assertAfterOnProductSecond">
            <argument name="product" value="$$createThirdProduct$$"/>
        </actionGroup>
    </test>
</tests>

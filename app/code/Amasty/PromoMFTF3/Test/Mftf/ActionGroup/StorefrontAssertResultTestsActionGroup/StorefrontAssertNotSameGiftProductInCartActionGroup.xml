<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="StorefrontAssertNotSameGiftProductInCartActionGroup">
        <arguments>
            <argument name="productName"/>
        </arguments>
        <amOnPage url="{{StorefrontCartPage.url}}" stepKey="navigateToShoppingCart"/>
        <waitForPageLoad stepKey="waitForPageLoadAfterOpen"/>
        <dontSeeElement selector="{{StorefrontCartSection.ProductInCartSameFree(productName)}}" stepKey="checkSameProductInCart"/>
    </actionGroup>
</actionGroups>

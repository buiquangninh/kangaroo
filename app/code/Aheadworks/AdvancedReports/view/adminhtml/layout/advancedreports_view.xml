<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_AdvancedReports::css/view.css"/>
        <css src="Aheadworks_AdvancedReports::css/timeframe.css"/>
        <css src="Aheadworks_AdvancedReports::css/page-menu.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View" name="aw_arep.view_container" as="view_container">
                <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Breadcrumbs" name="aw_arep.view_container.breadcrumbs" as="breadcrumbs"/>
                <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu" name="aw_arep.view_container.menu" as="menu">
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.salesoverview">
                        <arguments>
                            <argument name="path" xsi:type="string">*/salesoverview/index</argument>
                            <argument name="label" xsi:type="string">Sales Overview</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_salesoverview</argument>
                            <argument name="controller" xsi:type="string">salesoverview</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.productperformance">
                        <arguments>
                            <argument name="path" xsi:type="string">*/productperformance/index</argument>
                            <argument name="label" xsi:type="string">Product Performance</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_productperformance</argument>
                            <argument name="controller" xsi:type="string">productperformance</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.salesdetailed">
                        <arguments>
                            <argument name="path" xsi:type="string">*/salesdetailed/index</argument>
                            <argument name="label" xsi:type="string">Sales Detailed</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_salesdetailed</argument>
                            <argument name="controller" xsi:type="string">salesdetailed</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.category">
                        <arguments>
                            <argument name="path" xsi:type="string">*/category/index</argument>
                            <argument name="label" xsi:type="string">Sales by Category</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_category</argument>
                            <argument name="controller" xsi:type="string">category</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.couponcode">
                        <arguments>
                            <argument name="path" xsi:type="string">*/couponcode/index</argument>
                            <argument name="label" xsi:type="string">Sales by Coupon Code</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_couponcode</argument>
                            <argument name="controller" xsi:type="string">couponcode</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.paymenttype">
                        <arguments>
                            <argument name="path" xsi:type="string">*/paymenttype/index</argument>
                            <argument name="label" xsi:type="string">Sales by Payment Type</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_paymenttype</argument>
                            <argument name="controller" xsi:type="string">paymenttype</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.manufacturer">
                        <arguments>
                            <argument name="path" xsi:type="string">*/manufacturer/index</argument>
                            <argument name="label" xsi:type="string">Sales by Manufacturer</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::reports_manufacturer</argument>
                            <argument name="controller" xsi:type="string">manufacturer</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.settings">
                        <arguments>
                            <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_advancedreports</argument>
                            <argument name="label" xsi:type="string">Settings</argument>
                            <argument name="resource" xsi:type="string">Aheadworks_AdvancedReports::settings</argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.readme">
                        <arguments>
                            <argument name="label" xsi:type="string">Readme</argument>
                            <argument name="link_attributes" xsi:type="array">
                                <item name="href" xsi:type="string">http://confluence.aheadworks.com/display/EUDOC/Advanced+Reports+-+Magento+2</item>
                                <item name="target" xsi:type="string">_blank</item>
                                <item name="class" xsi:type="string">separator</item>
                            </argument>
                        </arguments>
                    </block>
                    <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Menu\Item" name="aw_arep_menu_item.support">
                        <arguments>
                            <argument name="label" xsi:type="string">Get Support</argument>
                            <argument name="link_attributes" xsi:type="array">
                                <item name="href" xsi:type="string">http://ecommerce.aheadworks.com/contacts/</item>
                                <item name="target" xsi:type="string">_blank</item>
                            </argument>
                        </arguments>
                    </block>
                </block>
                <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Period" name="aw_arep.view_container.period" as="period"/>
                <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Store" name="aw_arep.view_container.store" as="store"/>
                <block class="Aheadworks\AdvancedReports\Block\Adminhtml\View\Groupby" name="aw_arep.view_container.groupby" as="groupby"/>
            </block>
        </referenceContainer>
    </body>
</page>

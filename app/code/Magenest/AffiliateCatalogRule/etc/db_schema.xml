<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="catalogrule">
        <column xsi:type="smallint" name="is_affiliate" unsigned="false" nullable="false" identity="false"
                default="0" comment="Is Affiliate Rule"/>
    </table>
    <table name="catalogrule_product">
        <column xsi:type="smallint" name="is_affiliate" unsigned="false" nullable="false" identity="false"
                default="0" comment="Is Affiliate Rule"/>
    </table>
    <table name="catalogrule_product_replica">
        <column xsi:type="smallint" name="is_affiliate" unsigned="false" nullable="false" identity="false"
                default="0" comment="Is Affiliate Rule"/>
    </table>
    <table name="catalogrule_product_price">
        <column xsi:type="decimal" name="origin_rule_price" scale="6" precision="20" unsigned="false" nullable="false"
                default="0" comment="Original Rule Price"/>
    </table>
</schema>

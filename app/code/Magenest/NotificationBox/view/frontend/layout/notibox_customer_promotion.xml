<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>My Promotion</title>
    </head>
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="page.main.title.mobile">
                <action method="setPageTitle">
                    <argument translate="true" name="title" xsi:type="string">Promotion</argument>
                </action>
            </referenceBlock>
            <block class="Magenest\NotificationBox\Block\Customer\Tab\Notification" name="notification_tab"
                   template="Magenest_NotificationBox::notificationTab.phtml" cacheable="false">
                <arguments>
                    <argument name="exclude_type" xsi:type="string">order_%</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="page_description" remove="true" />
        <referenceBlock name="page.main.title" remove="true" />
    </body>
</page>

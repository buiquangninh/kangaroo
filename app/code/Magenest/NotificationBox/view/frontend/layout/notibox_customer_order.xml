<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="page.main.title.mobile">
                <action method="setPageTitle">
                    <argument translate="true" name="title" xsi:type="string">Update order</argument>
                </action>
            </referenceBlock>
            <block class="Magenest\NotificationBox\Block\Customer\Tab\OrderNotification" name="notification_tab"
                   template="Magenest_NotificationBox::order-notification-tab.phtml" cacheable="false">
                <arguments>
                    <argument name="type" xsi:type="string">order_</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="page_description" remove="true" />
        <referenceBlock name="page.main.title" remove="true" />
    </body>
</page>

<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer">
        <field name="city_id" component="Magenest_AdditionalRegisterForm/js/city" sortOrder="91" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">City</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <customEntry>city</customEntry>
                        <options class="Magenest\Directory\Model\ResourceModel\City\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="district_id" component="Magenest_AdditionalRegisterForm/js/district" sortOrder="92"
               formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">District</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <filterBy>
                            <field>city_id</field>
                            <target>${ $.provider }:${ $.parentScope }.city_id</target>
                        </filterBy>
                        <customEntry>district</customEntry>
                        <options class="Magenest\Directory\Model\ResourceModel\District\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="ward_id" component="Magenest_AdditionalRegisterForm/js/ward" sortOrder="93" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Ward</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <filterBy>
                            <field>district_id</field>
                            <target>${ $.provider }:${ $.parentScope }.district_id</target>
                        </filterBy>
                        <customEntry>district</customEntry>
                        <options class="Magenest\Directory\Model\ResourceModel\Ward\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>

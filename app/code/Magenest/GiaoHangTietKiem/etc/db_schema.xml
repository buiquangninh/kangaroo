<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="varchar" name="api_order_id" nullable="true" length="255" comment="Api order id"/>
        <column xsi:type="varchar" name="transfer_date" nullable="true" comment="Transfer Date" />
        <column xsi:type="varchar" name="transfer_amount" nullable="true" length="30" comment="Transfer Amount" />
        <column xsi:type="float" name="shipping_fee" nullable="true" comment="Shipment Fee" />
    </table>
    <table name="sales_order_grid">
        <column xsi:type="varchar" name="api_order_id" nullable="true" length="255" comment="Is Important"/>
    </table>
</schema>

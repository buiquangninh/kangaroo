<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Quote\Api\Data\CartItemInterface">
        <attribute code="thumbnail" type="string"/>
        <attribute code="magenest_product_id" type="int"/>
        <attribute code="product_options" type="Magenest\MobileApi\Api\Data\Cart\ItemOptionsInterface[]"/>
        <attribute code="is_subscription" type="boolean" />
        <attribute code="is_instalment" type="boolean" />
        <attribute code="frequency" type="string" />
        <attribute code="plan_id" type="string" />
        <attribute code="is_promo_item" type="boolean" />
        <attribute code="messages" type="string[]" />
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
        <attribute code="is_subscription" type="boolean" />
        <attribute code="is_instalment" type="boolean" />
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderItemInterface">
        <attribute code="thumbnail" type="string"/>
        <attribute code="options" type="Magenest\MobileApi\Api\Data\Cart\ItemOptionsInterface[]"/>
    </extension_attributes>
    <extension_attributes for="Magento\Catalog\Api\Data\ProductLinkInterface">
        <attribute code="id" type="int" />
        <attribute code="price" type="float" />
        <attribute code="final_price" type="float" />
        <attribute code="name" type="string" />
        <attribute code="rating" type="string" />
        <attribute code="review_counts" type="string" />
        <attribute code="image" type="string" />
        <attribute code="is_new" type="boolean" />
    </extension_attributes>
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="review" type="Magenest\MobileApi\Api\Data\Catalog\ReviewInterface" />
        <attribute code="pricing" type="Magenest\MobileApi\Api\Data\Catalog\PricingInterface" />
        <attribute code="attributes" type="Magenest\MobileApi\Api\Data\Catalog\AttributeInterface[]" />
        <attribute code="promo_gifts" type="Magenest\MobileApi\Api\Data\Promotion\GiftInterface[]" />
        <attribute code="promo_banners" type="string[]" />
        <attribute code="is_new" type="boolean" />
        <attribute code="is_backorder" type="boolean" />
    </extension_attributes>
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="configurable_config" type="Magenest\MobileApi\Api\Data\Catalog\Product\Configurable\ConfigInterface" />
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="customer_note" type="string"/>
        <attribute code="delivery_date" type="string" />
        <attribute code="company_name" type="string" />
        <attribute code="tax_code" type="string" />
        <attribute code="company_address" type="string" />
        <attribute code="status_label" type="string" />
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderAddressInterface">
        <attribute code="city_id" type="string"/>
        <attribute code="district" type="string" />
        <attribute code="district_id" type="string" />
        <attribute code="ward" type="string" />
        <attribute code="ward_id" type="string" />
    </extension_attributes>
    <extension_attributes for="Magenest\MobileApi\Api\Data\Store\HomeInterface">
        <attribute code="new" type="Magenest\MobileApi\Api\Data\Catalog\Widget\ProductSliderInterface"/>
        <attribute code="best_seller" type="Magenest\MobileApi\Api\Data\Catalog\Widget\ProductSliderInterface"/>
        <attribute code="sales_today" type="Magenest\MobileApi\Api\Data\Catalog\Widget\ProductSliderInterface"/>
        <attribute code="maybe_interested" type="Magenest\MobileApi\Api\Data\Catalog\Widget\ProductSliderInterface"/>
    </extension_attributes>
    <extension_attributes for="Magento\Customer\Api\Data\CustomerInterface">
        <attribute code="telephone" type="string"/>
    </extension_attributes>
</config>

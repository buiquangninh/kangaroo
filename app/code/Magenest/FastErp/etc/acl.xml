<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Magento_Sales::sales_operation">
                        <resource id="Magento_Sales::sales_order">
                            <resource id="Magenest_FastErp::order_confirm" title="Confirm Order" translate="title" sortOrder="10" />
                            <resource id="Magenest_FastErp::erp_sync_order" title="Sync Order ERP" translate="title" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_FastErp::configuration" title="Fast Erp Configuration" translate="title" sortOrder="110"/>
                            <resource id="Magenest_FastErp::menu" title="Fast Erp Menu" translate="title" sortOrder="120">
                                <resource id="Magenest_FastErp::erp_sync_products" title="Sync Products ERP" translate="title" sortOrder="10" />
                                <resource id="Magenest_FastErp::erp_sync_stocks" title="Sync Stocks ERP" translate="title" sortOrder="10" />
                                <resource id="Magenest_FastErp::erp_sync_warehouses" title="Sync Warehouses ERP" translate="title" sortOrder="10" />
                                <resource id="Magenest_FastErp::erp_history_log" title="Erp History" translate="title" sortOrder="20"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>

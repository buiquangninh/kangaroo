                "reviewsTabSelector": "#tab-label-reviews"
            },
            "Magenest_PhotoReview/js/process-filter-reviews": {
                "sortUrl": "<?= $block->escapeJs($block->escapeUrl($url)) ?>",
                "reviewsTabSelector": "#tab-label-reviews"
            }
        }
    }
</script>

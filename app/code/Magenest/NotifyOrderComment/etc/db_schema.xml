<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order_status_history" resource="sales" comment="Sales Flat Order Status History">
        <column xsi:type="int" name="user_id" unsigned="true" nullable="true" comment="User Admin ID"/>
        <column xsi:type="varchar" name="title" length="255" nullable="true" comment="Title"/>
        <column xsi:type="smallint" name="is_customer_notified_store_front" unsigned="true" nullable="false"
                identity="false" default="0" comment="Is Customer Notified On Store Front"/>
    </table>
</schema>

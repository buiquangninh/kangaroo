        <service class="Magenest\RewardPoints\Api\ProcessPointInterface" method="calculateMaxAppliedPoint"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/magenest/rewardpoint/loadPoint" method="POST">
        <service class="Magenest\RewardPoints\Api\ProcessPointInterface" method="loadPoint"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/magenest/rewardpoint/addPoint" method="POST">
        <service class="Magenest\RewardPoints\Api\ProcessPointInterface" method="addPoint"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/magenest/rewardpoint/cancelPoint" method="POST">
        <service class="Magenest\RewardPoints\Api\ProcessPointInterface" method="cancelPoint"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>

<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="group_category_config" resource="default" engine="innodb">
        <column xsi:type="int" name="id" padding="20" unsigned="true" nullable="false" identity="true"
                disabled="false"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" disabled="false"/>
        <column xsi:type="varchar" name="category" nullable="true" length="255" disabled="false"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">affiliate_group_form.group_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Magenest\AffiliateMultiLevelUpdate\Block\Adminhtml\Group\Edit\BackButton"/>
			<button name="delete" class="Magenest\AffiliateMultiLevelUpdate\Block\Adminhtml\Group\Edit\DeleteButton"/>
			<button name="save" class="Magenest\AffiliateMultiLevelUpdate\Block\Adminhtml\Group\Edit\SaveButton"/>
			<button name="save_and_continue" class="Magenest\AffiliateMultiLevelUpdate\Block\Adminhtml\Group\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>affiliate_group_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>affiliate_group_form.group_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="group_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="group_form_data_source" class="Magenest\Affiliate\Model\Group\DataProvider">
			<settings>
				<requestFieldName>group_id</requestFieldName>
				<primaryFieldName>group_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="base_fieldset">
		<settings>
			<label>Group Information</label>

		</settings>
		<field name="name" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Group</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="approval_time" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Group</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Approval Time</label>
				<dataScope>approval_time</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="revenue_to_reach" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Group</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Revenue To Reach</label>
				<dataScope>revenue_to_reach</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="revenue_to_keep" formElement="input" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Group</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Revenue To Keep</label>
				<dataScope>revenue_to_keep</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
        <field name="qty_order" formElement="input" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Group</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Qty order</label>
                <dataScope>qty_order</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="additional_reward_by_revenue">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Additional Reward By Revenue</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="source" xsi:type="string">Group</item>
                </item>
            </argument>
            <settings>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>${$.parentName}.reward_value</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>${$.parentName}.reward_value</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
        </field>
        <field name="reward_value">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magenest\RewardPoints\Model\Membership\CriteriaToReachTier</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Reward Value</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="membership-sort-order-with-value" xsi:type="boolean">true</item>
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="source" xsi:type="string">Group</item>
                </item>
            </argument>
        </field>
	</fieldset>
</form>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.form">
            <container name="shopping.cart.table.after">
                <block class="Magenest\OrderExtraInformation\Block\Cart\CustomerNote" name="cart.customer_note" template="Magenest_OrderExtraInformation::cart/note.phtml"/>
            </container>
        </referenceBlock>
        <referenceBlock name="additional.product.info">
            <block class="Magenest\OrderExtraInformation\Block\Cart\CustomerNote" name="cart.item.customer_note" template="Magenest_OrderExtraInformation::cart/item/note.phtml"/>
        </referenceBlock>
    </body>
</page>

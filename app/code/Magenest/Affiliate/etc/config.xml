<?xml version="1.0"?>
<!--
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <affiliate>
            <transaction>
                <admin>Magenest\Affiliate\Model\Transaction\Action\Admin</admin>
                <order>
                    <invoice>Magenest\Affiliate\Model\Transaction\Action\Order\Invoice</invoice>
                    <refund>Magenest\Affiliate\Model\Transaction\Action\Order\Refund</refund>
                </order>
                <withdraw>
                    <create>Magenest\Affiliate\Model\Transaction\Action\Withdraw\Create</create>
                </withdraw>
                <store_credit>
                    <admin_update>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\AdminUpdate</admin_update>
                    <earning_order>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\EarningOrder</earning_order>
                    <earning_refund>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\AdminUpdate</earning_refund>
                    <spending_order>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\SpendingOrder</spending_order>
                    <spending_refund>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\SpendingRefund</spending_refund>
                    <revert>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\Revert</revert>
                    <convert_kpoint_kcoint>Magenest\Affiliate\Model\Transaction\Action\StoreCredit\ConvertKpointKcoin</convert_kpoint_kcoint>
                </store_credit>
            </transaction>
            <payment_method>
                <vnpt_epay>
                    <label>VNPT E-Pay</label>
                    <model>Magenest\Affiliate\Model\Payment\Methods\VnptEpay</model>
                    <block>Magenest\Affiliate\Block\Payment\Methods\VnptEpay</block>
                    <active>1</active>
                </vnpt_epay>
            </payment_method>
            <general>
                <enabled>1</enabled>
                <enable_banner>1</enable_banner>
                <expired_time>365</expired_time>
                <overwrite_cookies>1</overwrite_cookies>
                <use_code_as_coupon>0</use_code_as_coupon>
                <discount_label>Affiliate Discount</discount_label>
                <show_link>footer_link</show_link>
                <page>
                    <welcome>affiliate-home</welcome>
                    <campaign_description>affiliate-home</campaign_description>
                    <faq>affiliate-faq</faq>
                    <getting_started>affiliate-getting-started</getting_started>
                    <policy_enable>0</policy_enable>
                </page>
                <url>
                    <type>hash</type>
                    <param>account_id</param>
                    <prefix>u</prefix>
                    <code_length>6</code_length>
                </url>
            </general>
            <account>
                <sign_up>
                    <allow_create>1</allow_create>
                    <default_group>1</default_group>
                    <admin_approved>0</admin_approved>
                    <default_email_notification>1</default_email_notification>
                </sign_up>
                <term_conditions>
                    <enable>1</enable>
                    <checkbox_text>I agree to the terms and conditions</checkbox_text>
                    <title>Terms and Conditions</title>
                    <html>affiliate-term-condition</html>
                    <default_checkbox>1</default_checkbox>
                </term_conditions>
                <balance>
                    <negative>1</negative>
                </balance>
            </account>
            <commission>
                <by_tax>0</by_tax>
                <by_shipping>0</by_shipping>
                <process>
                    <earn_commission_invoice>0</earn_commission_invoice>
                    <fee>10%</fee>
                    <holding_days>30</holding_days>
                    <refund>1</refund>
                </process>
            </commission>
            <withdraw>
                <allow_request>1</allow_request>
            </withdraw>
            <email>
                <sender>general</sender>
                <account>
                    <enable>1</enable>
                    <welcome>affiliate_email_account_welcome</welcome>
                </account>
                <transaction>
                    <enable>1</enable>
                    <update_balance>affiliate_email_transaction_update_balance</update_balance>
                </transaction>
                <withdraw>
                    <enable>1</enable>
                </withdraw>
            </email>
            <refer>
                <enable>1</enable>
                <account_sharing>affiliate_refer_account_sharing</account_sharing>
                <referring_page>affiliate-referfriend-description</referring_page>
                <display>list,detail</display>
                <cloudsponge>1</cloudsponge>
                <cloudsponge_key>a473483c2e256bd812bdc9a0bac867ecf1999a54</cloudsponge_key>
                <sharing_content>
                    <subject>Good product and services</subject>
                    <email_content><![CDATA[I've been shopping at {{store_name}} and feel really happy. They provide good customer service and reasonable prices.]]></email_content>
                </sharing_content>
            </refer>
        </affiliate>
        <sales>
            <totals_sort>
                <affiliate_discount>25</affiliate_discount>
            </totals_sort>
            <reorder>
                <allow>1</allow>
            </reorder>
        </sales>
    </default>
</config>

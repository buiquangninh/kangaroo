<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="salesrule" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="text" name="sale_day" nullable="true"  comment="Sale Day"/>
        <column xsi:type="smallint" name="is_seasonal_discount" unsigned="false" nullable="false" identity="false"
                default="0" comment="Is Seasonal Discount"/>
    </table>
    <table name="catalogrule">
        <column xsi:type="text" name="sale_day" nullable="true"  comment="Sale Day"/>
        <column xsi:type="smallint" name="is_seasonal_discount" unsigned="false" nullable="false" identity="false"
                default="0" comment="Is Seasonal Discount"/>
    </table>
</schema>

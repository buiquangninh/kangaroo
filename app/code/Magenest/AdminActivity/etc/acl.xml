<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_AdminActivity::activityConfig" title="Admin Activity Section"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::system">
                    <resource id="Magenest_AdminActivity::activity_head" title="Admin Activity" sortOrder="100">
                        <resource id="Magenest_AdminActivity::activity" title="View" sortOrder="10"/>
                        <resource id="Magenest_AdminActivity::login_activity" title="Login Activity" sortOrder="20"/>
                        <resource id="Magenest_AdminActivity::configuration" title="Settings" sortOrder="40"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>

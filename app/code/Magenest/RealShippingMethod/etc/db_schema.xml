<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="text" name="shipping_fee" comment="Real Shipping Fee"/>
        <column xsi:type="text" name="source_code" comment="Source Code"/>
        <column xsi:type="text" name="real_shipping_method" comment="Real Shipping Method"/>
        <column xsi:type="text" name="shipping_option" comment="Shipping Option"/>
        <column xsi:type="text" name="authorized_admin" comment="Shipping Option"/>
    </table>
    <table name="sales_order_grid" resource="default" engine="innodb">
        <column xsi:type="text" name="shipping_fee" comment="Real Shipping Fee"/>
        <column xsi:type="text" name="source_code" comment="Source Code"/>
        <column xsi:type="text" name="real_shipping_method" comment="Real Shipping Method"/>
        <column xsi:type="text" name="shipping_option" comment="Shipping Option"/>
    </table>
</schema>

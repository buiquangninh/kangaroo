<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <block class="Magento\Framework\View\Element\Template" name="page_description" template="Magento_Customer::page-description.phtml" after="-" />
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Theme\Block\Html\Title" name="page.main.title.mobile" template="Magento_Theme::html/title-mobile.phtml" before="-"/>
        </referenceContainer>
        <referenceBlock name="nav-toggle" remove="true" />
    </body>
</page>
